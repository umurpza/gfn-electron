{
  "name": "geforcenow-electron",
  "packageManager": "yarn@3.6.2",
  "appId": "com.github.hmlendea.${name}",
  "productName": "GeForce NOW",
  "version": "1.13.0",
  "description": "A Linux desktop web app for GeForce NOW",
  "main": "scripts/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never"
  },
  "build": {
    "asar": false,
    "linux": {
      "target": [
        "zip",
        "AppImage"
      ],
      "category": "Games",
      "artifactName": "${name}_${version}_linux.${ext}"
    },
    "extraFiles": [
      "com.github.hmlendea.${name}.desktop"
    ]
  },
  "repository": "https://github.com/hmlendea/gfn-electron",
  "keywords": [
    "Electron",
    "gfn",
    "geforcenow",
    "geforce-now"
  ],
  "author": "Hora»õiu Mlendea <Horatiu.Mlendea@ProtonMail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "electron": "26.0.0",
    "electron-builder": "^24.6.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "latest",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^3.0.2",
    "typescript": "*"
  },
  "dependencies": {
    "discord-rich-presence": "^0.0.8"
  }
}
